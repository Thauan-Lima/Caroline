let form = document.getElementById('formPrompt');



form.addEventListener('submit', function(event) {
    event.preventDefault();

    let nome = document.getElementById('nome').value.trim();
    let email = document.getElementById('email').value.trim();
    let tarefa = document.getElementById('tarefa').value.trim();
    let info = document.getElementById('info').value.trim();
    let persona = document.getElementById('persona').value.trim();
    let formato = document.getElementById('formato').value.trim();
    let submit = document.getElementById('submit').value.trim();
    let prompt;
    if(info.trim() != "") {
        prompt = `Nome: ${nome}\nE-Mail: ${email}\n${tarefa}\n${info}\nInteração desejada: ${persona}\nFormato da Saída: ${formato}\n:D`;
    } else {
        prompt = `Nome: ${nome}\nE-Mail: ${email}\n${tarefa}\nInteração desejada: ${persona}\nFormato da Saída: ${formato}\n:D`;
    }

    let resultado = document.getElementById('outPrompt');
    resultado.textContent = prompt;

    resultado.style.display = 'block';
});